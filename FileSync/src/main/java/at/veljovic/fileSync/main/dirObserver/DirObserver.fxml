<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<GridPane alignment="TOP_CENTER" hgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.veljovic.fileSync.main.dirObserver.DirObserverController">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
		<RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
		<RowConstraints minHeight="20.0" prefHeight="20.0" vgrow="NEVER" />
		<RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER" />
	</rowConstraints>
	<children>
		<Label text="Observe file changes." />
		<Button fx:id="directoryButton" mnemonicParsing="false" onAction="#onActionSetDirectory" prefWidth="10000.0" text="Set directory" GridPane.rowIndex="1" />
		<ListView fx:id="resultListView" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2" />
		<HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4">
			<children>
				<ProgressIndicator fx:id="progressIndicator" visible="false" />
				<Button fx:id="startButton" defaultButton="true" mnemonicParsing="false" onAction="#onActionStartButton" text="Start" />
				<Button fx:id="stopButton" cancelButton="true" disable="true" mnemonicParsing="false" onAction="#onActionStopButton" text="Stop" />
			</children>
		</HBox>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</GridPane>
