<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>

<GridPane alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.veljovic.fileSync.main.fileSync.FileSyncController">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
	</columnConstraints>
	<rowConstraints>
      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
		<RowConstraints minHeight="10.0" prefHeight="20.0" valignment="BOTTOM" vgrow="ALWAYS" />
	</rowConstraints>
	<children>
      <Label text="Sync contents of one folder with another. Last modified date and file size are compared." wrapText="true" GridPane.hgrow="SOMETIMES" />
		<Button id="startButton" fx:id="startButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#start" text="Start" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" />
		<ProgressBar id="progressBar" fx:id="progressBar" prefWidth="10000.0" progress="0.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" />
		<HBox alignment="CENTER_RIGHT" GridPane.rowIndex="1" />
		<Button id="destButton" fx:id="destButton" mnemonicParsing="false" onAction="#setFile" prefWidth="10000.0" text="Set destination directory" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
		<Button id="srcButton" fx:id="srcButton" mnemonicParsing="false" onAction="#setFile" prefWidth="10000.0" text="Set source directory" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
		<Label fx:id="progressLabel" prefWidth="10000.0" textAlignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</GridPane>
